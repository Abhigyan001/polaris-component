<div class="px-4 py-3 border-b border-gray-200 bg-gray-50"
     data-controller="table-header" 
     data-table-header-total-customers-value="<%= total_customers %>">

  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <input
        type="checkbox"
        id="select_all"
        class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2 mr-3"
        data-table-header-target="selectAllCheckbox"
        data-action="change->table-header#toggleSelectAll"
      >
      <span class="text-sm font-medium text-gray-700" data-table-header-target="selectionText">
        Showing <%= total_customers %> customers
      </span>
    </div>

    <div class="flex items-center space-x-2"
         data-table-header-target="actionButtons"
         style="display: none;">
      <%= render ButtonComponent.new(text: "Edit customers") %>

      <%= render DropdownMenuComponent.new(items: [
        {
          text: "Add tags"
        },
        {
          text: "Remove tags"
        },
        {
          text: "Delete customers",
          icon: "trash",
          destructive: true
        }
      ]) %>
    </div>
  </div>
</div>
