<div class="px-4 py-3 border-b border-gray-200 bg-gray-50" 
     data-controller="table-header" 
     data-table-header-total-customers-value="<%= total_customers %>">
  
  <div class="flex items-center justify-between">
    <!-- Left side - Selection info -->
    <div class="flex items-center">
      <input 
        type="checkbox" 
        id="select_all" 
        class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2 mr-3"
        data-table-header-target="selectAllCheckbox"
        data-action="change->table-header#toggleSelectAll"
      >
      <span class="text-sm font-medium text-gray-700" data-table-header-target="selectionText">
        Showing <%= total_customers %> customers
      </span>
    </div>

    <!-- Right side - Action buttons (hidden by default) -->
    <div class="flex items-center space-x-2" 
         data-table-header-target="actionButtons" 
         style="display: none;">
      <%= render ButtonComponent.new(text: "Edit customers") %>
      
      <!-- More options button -->
      <button class="p-2 text-gray-400 hover:text-gray-600 rounded-md hover:bg-gray-100 transition-colors duration-150">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zM12 13a1 1 0 110-2 1 1 0 010 2zM12 20a1 1 0 110-2 1 1 0 010 2z"></path>
        </svg>
      </button>
    </div>
  </div>
</div>
