<div class="flex items-center p-4 border-b border-gray-200 hover:bg-gray-100 transition-colors duration-150"
    data-controller="table-header customer-item"
    data-customer-item-target="container">
  <div class="flex items-center mr-4">
    <input
      type="checkbox"
      id="<%= checkbox_id %>"
      name="selected_customers[]"
      value="<%= customer.id %>"
      class="w-4 h-4 cursor-pointer border border-gray-600 accent-gray-700 rounded-sm"
      data-action="change->table-header#handleCustomerCheckboxChange change->customer-item#toggleSelection"
      <%= 'checked' if selected %>
    >
  </div>

  <div class="flex items-center justify-center w-9 h-9 bg-gray-300 rounded-lg mr-4">
    <%= heroicon("user", type: :outline, class: "w-6 h-6 text-white") %>
  </div>

  <div class="flex-1">
    <div class="text-gray-900 font-medium text-base">
      <%= customer_name %>
    </div>
    <div class="text-gray-600 text-sm mt-1">
      <%= customer_location %>
    </div>
  </div>
</div>
