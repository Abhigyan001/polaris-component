<div class="flex items-center p-4 border-b border-gray-200 hover:bg-gray-50 transition-colors duration-150">
  <div class="flex items-center mr-4">
    <input
      type="checkbox"
      id="<%= checkbox_id %>"
      name="selected_customers[]"
      value="<%= customer.id %>"
      class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2"
      <%= 'checked' if selected %>
    >
  </div>


  <div class="flex items-center justify-center w-10 h-10 bg-gray-300 rounded-full mr-4">
    <%= heroicon("user", variant: :outline, class: "w-6 h-6 text-gray-600") %>
  </div>


  <div class="flex-1">
    <div class="text-gray-900 font-medium text-base">
      <%= customer_name %>
    </div>
    <div class="text-gray-600 text-sm mt-1">
      <%= customer_location %>
    </div>
  </div>
</div>
